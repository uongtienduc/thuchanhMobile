<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_2c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="380dp"
        android:layout_height="833dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bg_in_2c"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="337dp"
        android:layout_height="69dp"
        android:background="@drawable/colorpass"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="210dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="302dp"
        android:layout_height="85dp"
        android:text="PASSWORD GENERATOR"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password length"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="147dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:background="@drawable/passlengthbg"
        tools:layout_editor_absoluteX="234dp"
        tools:layout_editor_absoluteY="330dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include lower case letters"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="426dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include upcase letters"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="510dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include number"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="598dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include special symbol"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="669dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="41dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="426dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="41dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="669dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="41dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="598dp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="41dp"
        android:layout_height="34dp"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="508dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="333dp"
        android:layout_height="75dp"
        android:text="GENERATE PASSWORD "
        app:backgroundTint="#3B3B98"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="755dp" />

</androidx.constraintlayout.widget.ConstraintLayout>